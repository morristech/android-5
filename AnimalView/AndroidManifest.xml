<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nigorojr.animalview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- Giraffe -->
        <activity
            android:name="com.nigorojr.animalview.Giraffe"
            android:label="@string/title_activity_giraffe" >
            <!-- For "Giraffe" button -->
            <intent-filter>
                <action android:name="com.nigorojr.animalview.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="animal"
                    android:path="/giraffe"
                    android:scheme="zoo" />
            </intent-filter>
            <!-- For "All" button -->
            <intent-filter>
                <action android:name="com.nigorojr.animalview.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Lion -->
        <activity
            android:name="com.nigorojr.animalview.Lion"
            android:label="@string/title_activity_lion" >
            <!-- For "Lion" button -->
            <intent-filter>
                <action android:name="com.nigorojr.animalview.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="animal"
                    android:path="/lion"
                    android:scheme="zoo" />
            </intent-filter>
            <!-- For "All" button -->
            <intent-filter>
                <action android:name="com.nigorojr.animalview.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Hippo -->
        <activity
            android:name="com.nigorojr.animalview.Hippo"
            android:label="@string/title_activity_hippo" >
            <!-- For "Hippo" button -->
            <intent-filter>
                <action android:name="com.nigorojr.animalview.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:host="animal"
                    android:path="/hippo"
                    android:scheme="zoo" />
            </intent-filter>
            <!-- For "All" button -->
            <intent-filter>
                <action android:name="com.nigorojr.animalview.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
